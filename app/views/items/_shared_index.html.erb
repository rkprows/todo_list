<hr/>
<% @items.each do |item| %>
	<h2><%= item.name %></h2>
	<h3><%= item.description %></h3>
	<h3><%= item.priority %></h3>
	<h3><%= item.complete %></h3>
	<%= link_to 'Show To-Do', item_path(item) %>
	<%= link_to 'Edit To-Do', edit_item_path(item) %>
	<%= link_to 'Delete', item_path(item), method: :delete %>
	<% end %>